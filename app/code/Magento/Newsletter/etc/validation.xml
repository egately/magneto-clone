<validation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Validator/etc/validation.xsd">
    <entity name="newsletter_subscriber">
        <rules>
            <rule name="check_email">
                <entity_constraints>
                    <constraint alias="email_validator" class="Magento\Newsletter\Model\Validator\Email" />
                </entity_constraints>
            </rule>
        </rules>
        <groups>
            <group name="save">
                <uses>
                    <use rule="check_email"/>
                </uses>
            </group>
        </groups>
    </entity>
</validation>
